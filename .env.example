# JWT Configuration (Required)
# Generate RSA keys using:
# openssl genpkey -algorithm RSA -pkeyopt rsa_keygen_bits:3072 -out private_key.pem
# openssl rsa -pubout -in private_key.pem -out public_key.pem
# Then encode in base64: cat private_key.pem | base64 -w0
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/authdb
DB_USER=postgres
DB_PASS=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Configuration
SERVER_PORT=8080
LOG_LEVEL=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SECURITY=INFO

# JWT Token Configuration
JWT_ACCESS_TTL=600
JWT_REFRESH_TTL=604800

# JPA Configuration
JPA_SHOW_SQL=false
